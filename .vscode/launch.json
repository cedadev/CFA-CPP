    "version": "0.2.0",
    "configurations": [
        {
            "name": "example1",
            "program": "${workspaceRoot}/build/examples/example1",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "targetArchitecture": "x64",
            "osx": {
                "MIMode": "lldb",
                "environment": [{"name" : "DYLD_LIBRARY_PATH",
                    "value" : "$DYLD_LIBRARY_PATH:../CFA-C/lib"}]
            },
            "linux": {
                "MIMode": "gdb",
                "environment": [{"name" : "LD_LIBRARY_PATH",
                "value" : "$LD_LIBRARY_PATH:../CFA-C/lib;lib/"}]
            },
            "preLaunchTask": "build_example1",
        },
    ],
}